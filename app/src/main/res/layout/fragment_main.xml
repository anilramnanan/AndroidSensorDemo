                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="GPS"
                        android:id="@+id/gpsHeader" />

                    <TextView android:layout_width="wrap_content" android:text="If GPS or Network is not on, the last know location will be displayed"
                        android:id="@+id/gps_msg"  android:layout_height="wrap_content" />

                    <TextView android:layout_width="wrap_content" android:text="GPS Status"
                        android:id="@+id/gps_status"  android:layout_height="wrap_content" />

                    <TextView android:layout_width="wrap_content" android:text="Network Status"
                        android:id="@+id/net_status"  android:layout_height="wrap_content" />



                    <TextView android:layout_width="wrap_content"
